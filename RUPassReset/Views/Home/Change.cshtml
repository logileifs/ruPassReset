@model RUPassReset.Service.Models.Password.ChangePassword

<div class="center-panel">
	<h3>Change password</h3>
	<hr />
	<div class="row">
		<div class="col-md-6 info">
			<p>Please fill out the form to change your password.</p>
			<p class="italic">Note that the password must be at least 6 characters long. We suggest you pick a password that consists of two or more random words to form a 
				random sentence.
			</p>
		</div>
		<div class="col-md-6">
			@using (Html.BeginForm())
			{
				<div class="form-group">
					@Html.TextBoxFor(model => model.UserName, new
					{
						@class="form-control", 
						@placeholder = "RU username",
						@autofocus = true
					})
					@Html.ValidationMessageFor(model => model.UserName, null, new {@class="text-danger"})
				</div>
				<div class="form-group">
					@Html.PasswordFor(model => model.Password, new 
					{
						@class="form-control",
						@placeholder="Old password"
					})
					@Html.ValidationMessageFor(model => model.Password, null, new {@class="text-danger"})
				</div>
				<div class="form-group">
					@Html.PasswordFor(model => model.PasswordNew, new 
					{
						@class="form-control",
						@placeholder="New password"
					})
					@Html.ValidationMessageFor(model => model.PasswordNew, null, new {@class="text-danger"})
				</div>
				<div class="form-group">
					@Html.PasswordFor(model => model.PasswordNewConfirm, new 
					{
						@class="form-control",
						@placeholder="Verify password"
					})
					@Html.ValidationMessageFor(model => model.PasswordNewConfirm, null, new {@class="text-danger"})
				</div>
				<div class="btn-controls pull-right">
					<a href="/" class="btn btn-default">Cancel</a>
					<button type="submit" class="btn btn-primary">Next</button>	
				</div>
			}
		</div>
	</div>
</div>
