

<div class="center-panel">
	<h3>Change password</h3>
	<hr />
	<div class="row">
		<div class="col-md-6 info">
			<p>Please fill out the form to change your password.</p>
		</div>
		<div class="col-md-6">
			<form method="POST" action="/change">
				<div class="form-group">
					<input name="username" type="text" class="form-control" placeholder="RU username" required autofocus />
				</div>
				<div class="form-group">
					<input name="old_password" type="password" class="form-control" placeholder="Old password" required />	
				</div>
				<div class="form-group">
					<input name="new_password" type="password" class="form-control" placeholder="New password" required />	
				</div>
				<div class="form-group">
					<input name="new_password_confirmed" type="password" class="form-control" placeholder="Verify password" required />	
				</div>
				<div class="btn-controls pull-right">
					<a href="/" class="btn btn-default">Cancel</a>
					<button type="submit" class="btn btn-primary">Next</button>	
				</div>
			</form>
		</div>
	</div>
</div>
