@model RUPassReset.Service.Models.Password.ChangePassword

@{
    ViewBag.Title = "Change password";
}

<div class="center-panel">
	<h3>Change password</h3>
	<hr />
	<div class="row">
		<div class="col-md-6 info">
			<p class="lead">Hi @Model.Username.</p> 
			<p>Please enter your new password. </p>
			<p><i>Note that the password must be at least 8 characters long.</i></p>
		</div>
		<div class="col-md-6">
			@using (Html.BeginForm("Verify", "Home", FormMethod.Post))
			{
				@Html.HiddenFor(model => model.Token)
				@Html.HiddenFor(model => model.Username)
				<div class="form-group">
					@Html.PasswordFor(model => model.PasswordNew, new 
					{
						@class="form-control",
						@placeholder="New password"
					})
					@Html.ValidationMessage("Error", new {@class="text-danger"})
					@Html.ValidationMessageFor(model => model.PasswordNew, null, new {@class="text-danger"})
				</div>
				<div class="form-group">
					@Html.PasswordFor(model => model.PasswordNewConfirm, new 
					{
						@class="form-control",
						@placeholder="Verify password"
					})
					@Html.ValidationMessageFor(model => model.PasswordNewConfirm, null, new {@class="text-danger"})
				</div>
				<hr/>
				<div class="btn-controls pull-right">
					<a href="/" class="btn btn-default">Cancel</a>
					<button type="submit" class="btn btn-primary">Confirm</button>	
				</div>
			}
		</div>
	</div>
</div>
